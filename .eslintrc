{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "eqeqeq": ["error", "smart"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "object-curly-spacing": ["error", "always"]
  }
}
